FROM alpine:latest
RUN \
    apk add --no-cache \
    apache2-proxy \
    apache2-ssl \
    apache2-utils \
    curl \
    git \
    logrotate \
    openssl
WORKDIR /var/www/localhost/htdocs

COPY index.html /var/www/localhost/htdocs
COPY index.css  /var/www/localhost/htdocs
COPY index.js /var/www/localhost/htdocs
COPY /media/ /var/www/localhost/htdocs
EXPOSE 80
CMD ["/usr/sbin/httpd", "-D", "FOREGROUND"]

